{
  "version": "1.0",
  "mode": "allowlist_only",
  "description": "Trust policy for auto-skill-bootstrap. Only allowlisted sources are auto-installed.",
  
  "allow": [
    "anthropic/*",
    "vercel/*",
    "vercel-labs/*",
    "alkoleft/*",
    "SteelMorgan/*",
    "microsoft/*",
    "github/*",
    "1c-syntax/*",
    "silverbulleters/*",
    "vanessa-opensource/*",
    "oscript-library/*"
  ],
  
  "deny": [
    "*/malicious-*",
    "*/test-*",
    "*/experimental-*"
  ],
  
  "notes": {
    "anthropic": "Official Anthropic skills",
    "vercel": "Vercel and Vercel Labs (skills.sh maintainer)",
    "alkoleft": "1C testing tools (YaXUnit)",
    "SteelMorgan": "Auto-skill-bootstrap author",
    "microsoft": "Official Microsoft tools",
    "github": "Official GitHub tools",
    "1c-syntax": "1C syntax tools",
    "silverbulleters": "1C community tools",
    "vanessa-opensource": "Vanessa BDD framework",
    "oscript-library": "OneScript libraries"
  },
  
  "review_required": {
    "description": "Skills from these sources require manual review before installation",
    "sources": [
      "*/*"
    ],
    "exceptions": "Only allowlisted sources above"
  },
  
  "auto_install": {
    "enabled": false,
    "description": "Auto-install allowlisted skills without user confirmation",
    "max_per_capability": 1,
    "notes": "Set to true only after testing"
  }
}
